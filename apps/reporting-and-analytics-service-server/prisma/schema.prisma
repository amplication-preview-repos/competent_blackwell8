datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Revenue {
  amount    Float?
  createdAt DateTime  @default(now())
  date      DateTime?
  id        String    @id @default(cuid())
  updatedAt DateTime  @updatedAt
}

model Report {
  createdAt DateTime @default(now())
  data      Json?
  id        String   @id @default(cuid())
  name      String?
  typeField String?
  updatedAt DateTime @updatedAt
}

model PerformanceMetric {
  createdAt  DateTime  @default(now())
  date       DateTime?
  id         String    @id @default(cuid())
  metricName String?
  updatedAt  DateTime  @updatedAt
  value      Float?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
