datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Booking {
  checkInDate  DateTime?
  checkOutDate DateTime?
  createdAt    DateTime  @default(now())
  customerName String?
  id           String    @id @default(cuid())
  room         Room?     @relation(fields: [roomId], references: [id])
  roomId       String?
  updatedAt    DateTime  @updatedAt
}

model RoomType {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  rate        Float?
  typeName    String?
  updatedAt   DateTime @updatedAt
}

model Room {
  bookings    Booking[]
  capacity    Int?
  createdAt   DateTime  @default(now())
  floor       Int?
  id          String    @id @default(cuid())
  numberField Int?
  updatedAt   DateTime  @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
